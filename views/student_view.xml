<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_school_students_list" model="ir.ui.view">
        <field name="name">school.students.list</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <list string="School Students">
                <field name="student_name"/>
                <field name="father_name"/>
                <field name="date_of_birth"/>
                <field name="student_age"/>
                <field name="student_gender"/>
                <field name="student_class"/>
                <field name="city"/>
                <field name="contact"/>
            </list>
        </field>
    </record>

    <record id="view_school_students_form" model="ir.ui.view">
        <field name="name">school.students.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="School Students">
                <sheet>
                    <group>
                        <group>
                            <field name="student_name"/>
                            <field name="father_name"/>
                            <field name="date_of_birth"/>
                            <field name="student_age"/>
                            <field name="student_gender"/>
                        </group>
                        <group>
                            <field name="student_class"/>
                            <field name="city"/>
                            <field name="contact"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Records" name="Records">
                            <field name="teachers_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_students" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Teacher
            </p>
        </field>
    </record>
</odoo>
