    <template id="portal_all_teacher" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <div class="col-12 col-md-4">
                <a href="/my/teachers" class="btn btn-outline-primary w-100 mb-3">
                    <i class="fa fa-chalkboard-teacher me-2"></i>
                    Teachers Data
                    <span class="badge bg-primary ms-2">
                        <t t-esc="count_teachers"/>
                    </span>
                </a>
            </div>
        </xpath>
    </template>

    <!-- Portal Teachers Page breadcrumbs-->
    <template id="portal-breadcrumbs" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'portal_my_teachers_list'" class="breadcrumb-item">Teachers</li>
            <li t-if="page_name == 'portal_teacher_detail'" class="breadcrumb-item">Teachers /
                <span t-out="teacher.name"/>
            </li>
        </xpath>
    </template>

    <!-- Portal Teachers Page list-->
    <template id="portal_my_teachers_list_template" name="Portal My Teachers">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_table">
                <h2 class="text-center mb-4">Our Teachers (Total:<t t-esc="teacher_count"/>)
                </h2>
                <thead>
                    <tr class="active">
                        <th class="text-center">Teacher Name</th>
                        <th class="text-center">Teacher Age</th>
                        <th class="text-center">Teacher Gender</th>
                        <th class="text-center">Student Record</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="teachers" t-as="teacher">
                        <tr>
                            <t t-esc="current_page"/>
                            <td class="text-center">
                                <a t-att-href="'/school/teacher/%s?c_page=%s' % (teacher.id, current_page)">
                                    <t t-out="teacher.name"/>
                                </a>

                            </td>
                            <td class="text-center">
                                <t t-out="teacher.age"/>
                            </td>
                            <td class="text-center">
                                <t t-out="teacher.gender"/>
                            </td>
                            <td class="text-center">
                                <t t-out="teacher.student_id.student_name"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>
    <!-- Portal Teachers Page form-->
</odoo>
